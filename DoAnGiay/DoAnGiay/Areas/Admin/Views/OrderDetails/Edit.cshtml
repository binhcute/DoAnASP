@model DoAnGiay.Areas.Admin.Models.OrderDetailsModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>OrderDetailsModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="IdOrder" class="control-label"></label>
                <input asp-for="IdOrder" class="form-control" />
                <span asp-validation-for="IdOrder" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Shoes" class="control-label"></label>
                <select asp-for="Shoes" class="form-control" asp-items="ViewBag.Shoes"></select>
                <span asp-validation-for="Shoes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SumMoney" class="control-label"></label>
                <input asp-for="SumMoney" class="form-control" />
                <span asp-validation-for="SumMoney" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Status" /> @Html.DisplayNameFor(model => model.Status)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
