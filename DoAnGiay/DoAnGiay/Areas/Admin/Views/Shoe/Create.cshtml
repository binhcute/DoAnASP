@model DoAnGiay.Areas.Admin.Models.ShoeModel

@{
    ViewData["Title"] = "Create";
}


<div class="row">
    <div class="col-xs-12">
        <form asp-action="Create" class="form-horizontal" role="form" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="col-sm-3 control-label no-padding-right" for="form-field-1"></label>
                <div class="col-sm-9">
                    <input asp-for="Name" type="text" id="form-field-1" placeholder="Nhập Tên" class="col-xs-10 col-sm-5" />
                </div>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="space-4"></div>
            <div class="form-group">
                <label asp-for="Date" class="col-sm-3 control-label no-padding-right" for="form-field-1"></label>
                <div class="col-xs-8 col-sm-9">
                    <div class="input-group bootstrap-timepicker">
                        <input asp-for="Date" id="timepicker1" type="text" class="form-control" />
                        <span class="input-group-addon">
                            <i class="fa fa-clock-o bigger-110"></i>
                        </span>
                    </div>
                </div>
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="space-4"></div>

            <div class="form-group">
                <label asp-for="Price" class="col-sm-3 control-label no-padding-right" for="form-field-1"></label>
                <div class="col-sm-9">
                    <input asp-for="Price" type="text" id="form-field-1" placeholder="Nhập Giá" class="col-xs-10 col-sm-5" />
                </div>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="space-4"></div>
            <div class="form-group">
                <label asp-for="Img" class="col-sm-3 control-label no-padding-right" for="form-field-1"></label>
                <div class="col-sm-9">
                    <div class="custom-file">
                        @*<input type="file" name="ful" id="ful" accept="*.png|*.jpg" class="custom-file-input" value="" />*@
                        <input type="file" name="imageUpload" id="imageUpload" accept="*.png|*.jpg" class="custom-file-input" onchange="ShowImagePreview(this, document.getElementById('previewImage'))" />
                        <label class="custom-file-label" for="imageUpload">Chọn ảnh</label>
                    </div>
                </div>
                <span asp-validation-for="Img" class="text-danger"></span>
                <div class="form-group">
                    <img src="~/admin/assets/images/avatars/avatar.png" class="img-thumbnail" id="previewImage" alt="Alternate Text" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Sizes" class="col-sm-3 control-label no-padding-right" for="form-field-1"></label>
                <div class="col-sm-9">
                    <div class="custom-file">

                        <select asp-for="Sizes" class="chosen-select form-control" id="form-field-select-3" data-placeholder="Choose a State..." asp-items="ViewBag.Sizes">
                        </select>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Sales" class="col-sm-3 control-label no-padding-right" for="form-field-1"></label>
                <div class="col-sm-9">
                    <div class="custom-file">

                        <select asp-for="Sales" class="chosen-select form-control" id="form-field-select-3" data-placeholder="Choose a State..." asp-items="ViewBag.Sales">
                        </select>
                    </div>
                </div>
            </div>
            <div class="space-4"></div>

            <div class="form-group">
                <label asp-for="Colors" class="col-sm-3 control-label no-padding-right" for="form-field-1"></label>
                <div class="col-sm-9">
                    <div class="custom-file">

                        <select asp-for="Colors" class="chosen-select form-control" id="form-field-select-3" data-placeholder="Choose a State..." asp-items="ViewBag.Colors">
                        </select>
                    </div>
                </div>
            </div>

            <div class="space-4"></div>

            <div class="form-group">
                <label asp-for="Materials" class="col-sm-3 control-label no-padding-right" for="form-field-1"></label>
                <div class="col-sm-9">
                    <div class="custom-file">

                        <select asp-for="Materials" class="chosen-select form-control" id="form-field-select-3" data-placeholder="Choose a State..." asp-items="ViewBag.Materials">
                        </select>
                    </div>
                </div>
            </div>

            <div class="space-4"></div>

            <div class="form-group">
                <label asp-for="Type" class="col-sm-3 control-label no-padding-right" for="form-field-1"></label>
                <div class="col-sm-9">
                    <div class="custom-file">

                        <select asp-for="Type" class="chosen-select form-control" id="form-field-select-3" data-placeholder="Choose a State..." asp-items="ViewBag.Type">
                        </select>
                    </div>
                </div>
            </div>

            <div class="space-4"></div>

            <div class="form-group">
                <label asp-for="Pro" class="col-sm-3 control-label no-padding-right" for="form-field-1"></label>
                <div class="col-sm-9">
                    <div class="custom-file">

                        <select asp-for="Pro" class="chosen-select form-control" id="form-field-select-3" data-placeholder="Choose a State..." asp-items="ViewBag.Pro">
                        </select>
                    </div>
                </div>
            </div>

            



            <div class="space-4"></div>

            <div class="form-group">
                <label asp-for="Description" class="col-sm-3 control-label no-padding-right" for="form-field-1"></label>
                <div class="col-sm-9">
                    <input asp-for="Description" type="text" id="form-field-1" placeholder="Nhập Tên" class="col-xs-10 col-sm-5" />
                </div>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>



            <div class="space-4"></div>

            <div class="form-group">
                <label asp-for="NumberSeri" class="col-sm-3 control-label no-padding-right" for="form-field-1"></label>
                <div class="col-sm-9">
                    <input asp-for="NumberSeri" type="text" id="form-field-1" placeholder="Nhập Tên" class="col-xs-10 col-sm-5" />
                </div>
                <span asp-validation-for="NumberSeri" class="text-danger"></span>
            </div>



            <div class="space-4"></div>

            <div class="form-group">
                <label class="control-label col-xs-12 col-sm-3">@Html.DisplayNameFor(model => model.Version)</label>
                <div class="col-xs-3">
                    <div class="checkbox">
                        <label class="block">
                            <input class="form-check-input" asp-for="Version" />
                        </label>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-xs-12 col-sm-3">@Html.DisplayNameFor(model => model.Shoelate)</label>
                <div class="col-xs-3">
                    <div class="checkbox">
                        <label class="block">
                            <input class="form-check-input" asp-for="Shoelate" />
                        </label>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-xs-12 col-sm-3">@Html.DisplayNameFor(model => model.Status)</label>
                <div class="col-xs-3">
                    <div class="checkbox">
                        <label class="block">
                            <input class="form-check-input" asp-for="Status" />
                        </label>
                    </div>
                </div>
            </div>

            <div class="clearfix form-actions">
                <div class="col-md-offset-3 col-md-9">
                    <button class="btn btn-info" type="submit" value="Create">
                        <i class="ace-icon fa fa-check bigger-110"></i>

                    </button>

                    &nbsp; &nbsp; &nbsp;
                    <button class="btn" type="reset">
                        <i class="ace-icon fa fa-undo bigger-110"></i>
                        Reset
                    </button>
                </div>
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}