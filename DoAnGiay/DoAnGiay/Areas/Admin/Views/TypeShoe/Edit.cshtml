<div class="row">
    <div class="col-xs-12">
        <form asp-action="Edit" class="form-horizontal" role="form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdType" />
            <div class="form-group">
                <label asp-for="Name" class="col-sm-3 control-label no-padding-right" for="form-field-1"></label>
                <div class="col-sm-9">
                    <input asp-for="Name" type="text" id="form-field-1" class="col-xs-10 col-sm-5" />
                </div>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="col-sm-3 control-label no-padding-right" for="form-field-1"></label>
                <div class="col-sm-9">
                    <input asp-for="Description" type="text" id="form-field-1" placeholder="Nhập Nội Dung Mô tả" class="col-xs-10 col-sm-5" />
                </div>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label col-xs-12 col-sm-3">@Html.DisplayNameFor(model => model.Status)</label>
                <div class="col-xs-3">
                    <div class="checkbox">
                        <label class="block">
                            <input class="form-check-input" asp-for="Status" />
                        </label>
                    </div>
                </div>
            </div>

            <div class="space-4"></div>


            <div class="clearfix form-actions">
                <div class="col-md-offset-3 col-md-9">
                    <button class="btn btn-info" type="submit" value="Save">
                        <i class="ace-icon fa fa-check bigger-110"></i>

                    </button>

                    &nbsp; &nbsp; &nbsp;
                    <button class="btn" type="reset">
                        <i class="ace-icon fa fa-undo bigger-110"></i>
                        Reset
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
